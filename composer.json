{
  "name":             "fabb-dev/pattern-lab-safe-data",
  "description":      "Allows data from the data directory to be marked as safe",
  "keywords":         ["pattern lab", "autoescape", "escape"],
  "type":             "patternlab-plugin",
  "authors": [
    {
      "name":         "Andy Fowlston",
      "email":        "andy@fabbdev.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "FabbDev\\SafeData\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "FabbDev\\SafeData\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^7",
    "pattern-lab/core": "^2.9",
    "twig/twig": "^1"
  },
  "require-dev": {
    "phpunit/phpunit": "^7"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "patternlab": {
      "config": {
        "plugins": {
          "safeData": {
            "enabled": false,
            "charset": "UTF-8"
          }
        }
      }
    }
  }
}
